# Development Environment Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://dev_user:dev_password@localhost:5432/et_dev"
DIRECT_URL="postgresql://dev_user:dev_password@localhost:5432/et_dev"

# JWT
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="dev-jwt-refresh-secret-change-in-production"

# Payment Gateways (Sandbox/Test Mode)
WEBIRR_API_KEY="dev-webirr-api-key"
WEBIRR_SANDBOX=true
TELEBIRR_API_KEY="dev-telebirr-api-key"
TELEBIRR_SANDBOX=true
CBEBIRR_API_KEY="dev-cbebirr-api-key"
CBEBIRR_SANDBOX=true

# AWS Configuration
AWS_REGION="af-south-1"
AWS_ACCESS_KEY_ID="dev-access-key"
AWS_SECRET_ACCESS_KEY="dev-secret-key"

# S3 Bucket
S3_BUCKET_NAME="et-dev-bucket"
S3_REGION="af-south-1"
CLOUDFRONT_DOMAIN=""

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_SESSION_DB=0
REDIS_PAYMENT_DB=1

# Email Configuration
SMTP_HOST="smtp.ethiopean.com"
SMTP_PORT=587
SMTP_USER="noreply@stanstore.et"
SMTP_PASS="dev-smtp-password"

# Ethiopian SMS Provider
SMS_API_KEY="dev-sms-api-key"
SMS_SANDBOX=true

# Application URLs
WEB_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"
API_URL="http://localhost:3001/api"

# CORS
CORS_ORIGINS="http://localhost:3000"

# Security
BCRYPT_ROUNDS=10

# Ethiopian Localization
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,am"
TIMEZONE="Africa/Addis_Ababa"
CURRENCY="ETB"
COUNTRY_CODE="ET"
